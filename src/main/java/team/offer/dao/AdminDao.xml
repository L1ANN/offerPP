<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Admin">

    <resultMap type="main.java.team.offer.entity.Admin" id="adminResult">
        <id column="pk_administrator_name" jdbcType="INTEGER" property="pkAdministrator_name"/>
        <result column="administrator_password" jdbcType="VARCHAR" property="adminnistratorPassword"/>
    </resultMap>
    <select id="findAdminById" parameterType="int" resultType="adminResult">
        SELECT  pk_administrator_name,administrator_password from administrator where pk_administrator_name = #{_parameter}
    </select>

    <select id="listInactiveUsers" parameterType="long" resultMap="userResult">
        SELECT * from user WHERE #{_parameter} - userLastLogin >= 31536000000
    </select>

    <delete id="deleteUser" parameterType="int" >
        DELETE FROM user WHERE pkUserId = #{_parameter}
    </delete>

    <select id="findCompanyById" parameterType="int" resultMap="companyResult">
        SELECT * from company WHERE pkComId = #{_parameter}
    </select>

    <select id="listNotPassCompanys" resultMap="companyResult">
        SELECT * FROM  company WHERE comPass = NULL
    </select>

    <update id="modifyCompanyPass" parameterType="java.util.Arrays">
        UPDATE company SET
        <foreach collection="array" index="i">
            <if test="i==0">
                comPass = #{array[i]} WHERE
            </if>
            <if test="i==1">
                pkComId = #{array[i]}
            </if>
        </foreach>
    </update>

    <select id="findAllCompanys" resultMap="companyResult">
        SELECT * FROM  company
    </select>

    <update id="setPositionLimit" parameterType="java.util.Arrays">
        UPDATE company SET
        <foreach collection="array" index="i">
            <if test="i==0">
                comPostlimit = #{array[i]} WHERE
            </if>
            <if test="i==1">
                pkComId = #{array[i]}
            </if>
        </foreach>
    </update>
</mapper>